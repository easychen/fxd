{
  "name": "fxd-app-x-publish",
  "description": "自动发布推文",
  "version": "1.0.0",
  "main": "index.js",
  "license": "SEE LICENSE IN LICENSE.txt",
  "type": "module",
  "meta": {
    "for": "fxd",
    "author_uid": 1,
    "args": {
      "main|publish": {
        "content": {
          "name": "content",
          "cn_name": "推文正文",
          "type": "string",
          "required": true,
          "description": "推文内容"
        },
        "headless": {
          "name": "headless",
          "cn_name": "后台模式",
          "description": "是否使用后台模式",
          "type": "boolean",
          "default": true,
          "example": "true"
        },
        "user": {
          "name": "user",
          "description": "浏览器使用的用户目录",
          "type": "string",
          "default": "default",
          "example": "admin"
        },
        "format": {
          "name": "format",
          "description": "返回的数据格式",
          "type": "string",
          "default": "text",
          "example": "json",
          "enum": [
            "json",
            "text"
          ]
        },
        "timeout": {
          "name": "timeout",
          "description": "Playwright 操作超时时间,单位毫秒",
          "type": "number",
          "default": 60000,
          "example": 30000
        },
        "wait_type": {
          "name": "wait_type",
          "description": "等待元素出现的方式",
          "type": "string",
          "default": "domcontentloaded",
          "example": "networkidle",
          "enum": [
            "domcontentloaded",
            "load",
            "networkidle"
          ]
        },
        "images": {
          "name": "images",
          "cn_name": "推文配图URL",
          "description": "图片地址，用逗号分隔",
          "type": "string",
          "default": "",
          "example": "https://www.baidu.com/1.jpg,https://www.baidu.com/2.jpg"
        },
        "browser": {
          "name": "browser",
          "description": "浏览器类型",
          "type": "string",
          "default": "chrome",
          "example": "chrome",
          "enum": [
            "chrome",
            "firefox",
            "webkit"
          ]
        }
      }
    },
    "output": {
      "main|publish": {
        "success": {
          "action": {
            "name": "action",
            "type": "string",
            "description": "执行的动作",
            "example": "publish"
          },
          "message": {
            "name": "message",
            "type": "string",
            "description": "执行结果的简述",
            "example": "done"
          },
          "output": {
            "name": "output",
            "type": "string",
            "description": "推文内容的前100个字符加上省略号",
            "example": "这是推文的前100个字符的示例..."
          },
          "checked": {
            "name": "checked",
            "type": "boolean",
            "description": "是否在用户主页上检查到发布的推文",
            "example": "true"
          }
        },
        "fail": {
          "error": {
            "name": "error",
            "type": "string",
            "description": "错误的详细信息",
            "example": "发布推文时出错"
          },
          "output": {
            "name": "output",
            "type": "string",
            "description": "错误信息的消息文本",
            "example": "网络连接失败"
          }
        }
      }
    }
  },
  "dependencies": {
    "css-in-js-utils": "^3.1.0",
    "fxd-app-core": "^1.0.47",
    "fxd-sdk": "^1.0.66",
    "ow": "^2.0.0"
  }
}
